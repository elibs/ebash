#-----------------------------------------------------------------------------------------------------------------------
#
# Test Helpers
#
#-----------------------------------------------------------------------------------------------------------------------
archive_types=(
    cgz
    cpio
    cxz
    iso
    squashfs
    tar
    tar.gz
    tlz
)

# This test requires a lot of loopback devices because each time we mount an ISO or SQUASHFS a /dev/loop* is required.
# By default on most systems we only have 8 loopback devices. So this suite_setup code will go through and create a
# bunch of additional ones. The default Linux kernel allows up to 255 loopback devices and their presence doesn't hurt
# anything.
suite_setup()
{
    etestmsg "Creating up to 255 loopback devices"
    for (( idx=0; idx < 255; idx++ )); do
        [[ -e "/dev/loop${idx}" ]] && continue

        echo -n "${idx} "
        mknod -m 660 /dev/loop${idx} b 7 ${idx}
    done

    echo ""
}

# Helper function to run a provided callback test function on every supported archive type. It does them all in their
# own separate unique directories and does them all in parallel to make overall test time faster.
test_all_archives()
{
    $(opt_parse callback)

    local idx=0
    declare -A pids
    for idx in $(array_indexes archive_types); do

        local rcfile="${PWD}/${idx}.rc"

        (
            local ftype="${archive_types[$idx]}"
            einfos "${ftype}"

            COLUMNS=50 ebanner "${ftype} ($((idx+1))/${#archive_types[@]})"

            mkdir -p "${idx}"
            cd "${idx}"

            try
            {
                ${callback}
                echo -n 0 > ${rcfile}
            }
            catch
            {
                echo -n $? > ${rcfile}
            }

        ) &> ${idx}.log &

        pids[$idx]=$!
    done

    eprogress "Waiting"
    wait "${pids[@]}"
    eprogress_kill

    local rc=0 idx_rc=0 ftype=""
    for idx in $(array_indexes archive_types); do

        cat ${idx}.log

        ftype="${archive_types[$idx]}"
        idx_rc=$(cat ${idx}.rc)
        etestmsg "Archive $(lval idx ftype idx_rc)"

        if [[ ${idx_rc} -ne 0 ]]; then
            eerror "Error in $(lval ftype idx idx_rc)"
        fi

        (( rc += idx_rc )) || true
    done

    return "${rc}"
}

